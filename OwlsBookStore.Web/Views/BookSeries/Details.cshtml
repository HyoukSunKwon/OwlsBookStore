            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
            <hr />
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.UrlBookSeriese)
        </dt>

        <dd>
            <img src="@Html.DisplayFor(model => model.UrlBookSeriese)" height="100" width="100" />
